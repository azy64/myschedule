{% extends 'base.html.twig' %}

{% block title %}Incription sur la liste de visite{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% include("menu/header.html.twig") %}
<div class="example-wrapper">
    
 <h1>La liste des patients en attente!</h1>

   <table class="table">
    <thead>
        <th>#</th>
        <th>Nom</th>
        <th>Prenom</th>
        <th>N° de securité sociale</th>
        <th>Date</th>
        <th>Examiné ?</th>
    </thead>
    <tbody>
    {% for visitor in visitors %}
    <tr>
    <td>{{visitor.arrivalPosition}}</td>
    <td>{{visitor.patient.nom}}</td>
    <td>{{visitor.patient.prenom}}</td>
    <td>{{visitor.patient.socialSecurityNumber}}</td>
    <td>{{visitor.arrivalDate|date("d-m-Y H:m:s")}}</td>
    <td>
    {% if visitor.examined %} 
       <button id="visitor-{{visitor.id}}" class="btn btn-small btn-success">
            OK
        </button>
        {% else %}
        <button id="visitor-{{visitor.id}}" class="btn btn-small btn-warning">
            examiné?
        </button>
    {% endif %}
    </td>
    </tr>
    {% endfor %}
    </tbody>
   </table>
       
</div>
{% endblock %}
