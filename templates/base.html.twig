     <script crossorigin="anonymous" src="https://printjs-4de6.kxcdn.com/print.min.js"></script>
    <script>
        let btn = document.querySelector("#printer");
        if(btn) btn.addEventListener("click",()=>{
                    console.log("printing...");
                    print();
                    printJS('#body',"pdf");
                })
    </script>
